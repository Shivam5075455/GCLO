<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dim_10"
    android:layout_marginEnd="@dimen/dim_10"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgEPProfileImage"
        android:layout_width="@dimen/dim_130"
        android:layout_height="@dimen/dim_130"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_10"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvEPChangeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_3"
        android:text="@string/change_profile_photo" />

    <TextView
        android:id="@+id/tvEPName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/name"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tvEPUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/username"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEPEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/email"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEPPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/post"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEPAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/address"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEPPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/phone"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEPGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:hint="@string/gender"
        android:minHeight="48dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginEnd="@dimen/dim_20"
            android:layout_weight="1"
            android:backgroundTint="@color/app_theme"
            android:text="@string/cancel"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginEnd="@dimen/dim_20"
            android:layout_weight="1"
            android:backgroundTint="@color/app_theme"
            android:text="@string/save"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>
