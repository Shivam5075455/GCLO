<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dim_10"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/dim_5"
            app:strokeColor="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="@dimen/dim_30"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_marginEnd="@dimen/dim_5"
                        android:text="ID"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPDPersonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_marginEnd="@dimen/dim_5"
                        android:text="@string/person_id"
                        android:textIsSelectable="true" />


                    <TextView
                        android:id="@+id/tvPDPost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/post" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvPDPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:text="@string/name"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPDPersonGender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginEnd="@dimen/dim_10"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/female"
                        android:textAlignment="textEnd"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvPDPersonUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_5"
                    android:layout_marginTop="@dimen/dim_10"
                    android:text="Username"
                    android:textIsSelectable="true"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvPDPersonEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_5"
                    android:layout_marginTop="@dimen/dim_10"
                    android:text="@string/email"
                    android:textIsSelectable="true"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="1"
                        android:text="Location"
                        android:textAlignment="textStart"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPDPersonLat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="2"
                        android:text="Lat: 12.345678"
                        android:textIsSelectable="true" />


                    <TextView
                        android:id="@+id/tvPDPersonLong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="2"
                        android:text="Long: 12.345678"
                        android:textIsSelectable="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="1.2"
                        android:text="Zone"
                        android:textAlignment="textStart"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPDPersonZone"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="0.5"
                        android:background="@color/green"
                        android:text="out"
                        android:textColor="@color/black"
                        android:textIsSelectable="true" />

                    <!--                <TextView-->
                    <!--                    android:id="@+id/tvPDPersonOut"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_marginStart="@dimen/dim_5"-->
                    <!--                    android:layout_marginTop="@dimen/dim_10"-->
                    <!--                    android:layout_weight="2"-->
                    <!--                    android:text=""-->
                    <!--                    android:textIsSelectable="true" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_20"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginBottom="@dimen/dim_7"
                        android:text="Distance"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPDPersonDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dim_10"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_weight="2"
                        android:text="dis"
                        android:textIsSelectable="true" />

                </LinearLayout>

                <!--                <TextView-->
                <!--                    android:id="@+id/personDistance"-->
                <!--                    android:layout_width="@dimen/dim_375"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginStart="@dimen/dim_5"-->
                <!--                    android:layout_marginTop="@dimen/dim_10"-->
                <!--                    android:layout_marginEnd="@dimen/dim_15"-->
                <!--                    android:layout_marginBottom="@dimen/dim_7"-->
                <!--                    android:text="Distance"-->
                <!--                    android:textIsSelectable="true"-->
                <!--                    android:textStyle="bold" />-->


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


